<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E0707"
    tools:context=".sifredegistir">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="302dp"
        android:layout_height="184dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:contentDescription="todo"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sifrecikisbutton"
        android:layout_width="334dp"
        android:layout_height="0dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/buttonbackground"
        android:text="ÇIKIŞ"
        android:textAllCaps="false"
        android:textSize="21sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yenisifrekaydetbutton" />

    <Button
        android:id="@+id/yenisifrekaydetbutton"
        android:layout_width="340dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/buttonbackground"
        android:text="GÜNCELLE"
        android:textAllCaps="false"
        android:textSize="21sp"
        app:layout_constraintBottom_toTopOf="@+id/sifrecikisbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yenisifre" />

    <EditText
        android:id="@+id/yenisifre"
        android:layout_width="347dp"
        android:layout_height="48dp"
        android:layout_marginTop="322dp"
        android:layout_marginBottom="51dp"
        android:autofillHints=""
        android:background="@drawable/userbackground"
        android:drawablePadding="10dp"
        android:hint=" Eposta"
        android:inputType=""
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColor="#070603"
        app:layout_constraintBottom_toTopOf="@+id/yenisifrekaydetbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/sifreguncelle"
        android:layout_width="311dp"
        android:layout_height="36dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="53dp"
        android:background="#D1A318"
        android:text="ŞİFRE GÜNCELLEME SAYFASI"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>